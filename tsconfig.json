{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "target": "es5",
    "baseUrl": "dist",
    "strict": true,
    "jsx": "react",
    "module": "ES2015",
    "lib": ["ES2015", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "typeRoots": ["@types"]
  },
  "include": [
    "**/*.tsx", "**/*.ts", "@types", "index.ts", "dist"
  ],
  "exclude": [
    "./lib",
    "./node_modules",
    "./src/**/*.test.tsx",
    "./src/**/*.stories.tsx",
  ]
}