{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./lib",
    "target": "ES2015",
    "baseUrl": "./",
    "strict": true,
    "jsx": "react",
    "module": "ES2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "typeRoots": ["@types"]
  },
    "rules": {
        "import/order": {
          "newlines-between": "always"
        }
  },
  "include": [
    "**/*.tsx", "**/*.ts", "@types", "index.ts", "dist", "*/d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.test.tsx",
    "./src/**/*.stories.tsx"
  ]
}
